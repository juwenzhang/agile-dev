{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./jwz-m-cli",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.ejs"]
}